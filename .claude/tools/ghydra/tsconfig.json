{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "errors.ts",
    "instances-current.ts",
    "instances-discover.ts",
    "instances-list.ts",
    "instances-register.ts",
    "instances-unregister.ts",
    "instances-use.ts",
    "memory-read.ts",
    "memory-write.ts",
    "shared-schemas.ts",
    "utils.ts",
    "../config/config-loader.ts",
    "../config/lib/mcp-client.ts",
    "../config/lib/sanitize.ts",
    "../../lib/find-project-root.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
