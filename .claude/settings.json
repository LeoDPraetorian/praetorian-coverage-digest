{
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "1800000",
    "BASH_MAX_TIMEOUT_MS": "1800000"
  },
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(npm test :*)",
      "Bash(git status)",
      "Bash(git diff :*)",
      "Bash(git log :*)",
      "Bash(git add :*)",
      "Bash(git commit :*)",
      "Bash(git push)",
      "Bash(git config :*)",
      "Bash(git tag :*)",
      "Bash(git branch :*)",
      "Bash(git checkout :*)",
      "Bash(git stash :*)",
      "Bash(jq :*)",
      "Bash(node :*)",
      "Bash(which :*)",
      "Bash(pwd)",
      "Bash(ls :*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(curl)",
      "Bash(wget)",
      "Bash(eval :*)",
      "Bash(make play)",
      "Bash(make dev)",
      "Bash(make purge)",
      "Bash(go run */user-purge/*)",
      "Bash(git push --tags)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "cd $(git rev-parse --show-toplevel) && bash scripts/sound/sound-notification.sh play"
          }
        ]
      }
    ]
  },
  "includeCoAuthoredBy": false,
  "enabledMcpjsonServers": [
    "chariot",
    "praetorian-cli",
    "nebula",
    "atlassian",
    "playwright",
    "context7"
  ]
}
