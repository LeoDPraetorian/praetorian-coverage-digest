{
  "model": "sonnet[1m]",
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "1800000",
    "BASH_MAX_TIMEOUT_MS": "1800000"
  },
  "permissions": {
    "allow": [
      "Bash(npm run test:*)",
      "Bash(npm test :*)",
      "Bash(git status)",
      "Bash(git diff :*)",
      "Bash(git log :*)",
      "Bash(git add :*)",
      "Bash(git config :*)",
      "Bash(git tag :*)",
      "Bash(git branch :*)",
      "Bash(git checkout :*)",
      "Bash(jq :*)",
      "Bash(node :*)",
      "Bash(which :*)",
      "Bash(pwd)",
      "Bash(ls :*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(curl)",
      "Bash(wget)",
      "Bash(eval :*)",
      "Bash(make deploy:*)",
      "Bash(make purge)",
      "Bash(go run */user-purge/*)",
      "Bash(git push --tags)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "cd $(git rev-parse --show-toplevel) && bash scripts/sound/sound-notification.sh play"
          }
        ]
      }
    ]
  },
  "includeCoAuthoredBy": false,
  "enableAllProjectMcpServers": false,
  "enabledMcpjsonServers": [
    "chrome-devtools", "linear"
  ],
  "disabledMcpjsonServers": [
    "atlassian",
    "context7",
    "currents",
    "praetorian-cli",
    "playwright",
    "nebula"
  ]
}
