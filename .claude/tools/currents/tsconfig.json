{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "types": ["node"]
  },
  "include": [
    "get-projects.ts",
    "get-run-details.ts",
    "get-runs.ts",
    "get-spec-files-performance.ts",
    "get-spec-instance.ts",
    "get-test-results.ts",
    "get-tests-performance.ts",
    "get-tests-signatures.ts",
    "index.ts",
    "../config/config-loader.ts",
    "../config/lib/mcp-client.ts",
    "../config/lib/sanitize.ts",
    "../../lib/find-project-root.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
