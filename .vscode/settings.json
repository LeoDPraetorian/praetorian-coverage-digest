{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "eslint.workingDirectories": [
    {
      "directory": "./modules/chariot/ui",
      "changeProcessCWD": true
    },
    {
      "directory": "./modules/chariot/e2e", 
      "changeProcessCWD": true
    },
    {
      "directory": "./modules/chariot-ui-components",
      "changeProcessCWD": true
    }
  ],
  "eslint.nodePath": "./modules/chariot/ui/node_modules",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript", 
    "typescriptreact"
  ],
  "search.exclude": {
    "**/modules/chariot/backend/build": true,
    "**/modules/chariot/ui/build": true,
    "**/modules/chariot/build": true
  },
  "files.exclude": {
    "**/modules/chariot/backend/build": true,
    "**/modules/chariot/ui/build": true,
    "**/modules/chariot/build": true  }
}