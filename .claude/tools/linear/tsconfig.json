{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "types": ["node"]
  },
  "include": [
    "create-comment.ts",
    "create-issue.ts",
    "create-project.ts",
    "create-bug.ts",
    "create-jira-bug.ts",
    "find-issue.ts",
    "find-user.ts",
    "get-issue.ts",
    "get-project.ts",
    "get-team.ts",
    "index.ts",
    "list-comments.ts",
    "list-cycles.ts",
    "list-issues.ts",
    "list-projects.ts",
    "list-teams.ts",
    "list-users.ts",
    "update-cycle.ts",
    "update-issue.ts",
    "update-project.ts",
    "../config/config-loader.ts",
    "../config/lib/mcp-client.ts",
    "../config/lib/sanitize.ts",
    "../../lib/find-project-root.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
