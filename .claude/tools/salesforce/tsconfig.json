{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "*.ts",
    "schemas/*.ts",
    "../config/config-loader.ts",
    "../config/lib/mcp-client.ts",
    "../config/lib/sanitize.ts",
    "../config/lib/response-utils.ts",
    "../../lib/find-project-root.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
