{
  "name": "@chariot/claude-infrastructure",
  "version": "1.0.0",
  "description": "Claude Code infrastructure - skills, tools, agents, hooks",
  "private": true,
  "type": "module",
  "workspaces": [
    "lib",
    "lib/testing",
    "tools/*",
    "skill-library/lib",
    "skill-library/claude/skill-management/*/scripts",
    "skill-library/claude/agent-management/*/scripts",
    "skill-library/claude/mcp-tools/*/scripts",
    "skills/managing-tool-wrappers/scripts"
  ],
  "devDependencies": {
    "@claude/testing": "*",
    "@types/node": "^20.11.24",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "vitest": "^1.6.1"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:run": "vitest run",
    "test:unit": "vitest run **/*.unit.test.ts",
    "test:integration": "vitest run **/*.integration.test.ts",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "build:skills": "npm run build --workspaces --if-present -- --filter='skills/*'",
    "clean:all": "rm -rf node_modules tools/*/node_modules skills/*/scripts/node_modules lib/testing/node_modules"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@types/js-yaml": "^4.0.9",
    "async-mutex": "^0.5.0",
    "js-yaml": "^4.1.1",
    "ky": "^1.14.2",
    "msw": "^2.12.7",
    "yaml": "^2.8.2",
    "zod": "^3.24.1"
  }
}
